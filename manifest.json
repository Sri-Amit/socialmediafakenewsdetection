{
  "manifest_version": 3,
  "name": "Fake News Detector for Twitter",
  "version": "1.0.0",
  "description": "Analyzes Twitter posts to detect fake news using AI and web search",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://serpapi.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fake News Detector"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 